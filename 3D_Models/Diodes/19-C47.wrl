# La base blanche de la led
Shape {
    appearance Appearance {
        material Material {
            diffuseColor 0.5 0.5 0.5
            emissiveColor 0.5 0.5 0.5
            transparency 0
        }
    }
    geometry Box {
        size 1.8 1.8 0.28
    }
}

# L'epoxy transparente au dessus de la base blanche
Transform {
    translation 0 0 0.325
    children Shape {
        appearance Appearance {
            material Material {
                diffuseColor 0.5 0.5 0.3
                emissiveColor 0.1 0.09 0.05
                transparency 0.6
            }
        }
        geometry Box {
            size 1.8 1.8 0.37
        }
    }
}

